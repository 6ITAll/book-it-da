{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@src/*": ["src/*"],
      "@pages/*": ["src/pages/*"],
      "@features/*": ["src/features/*"],
      "@components/*": ["src/components/*"],
      "@shared/*": ["src/shared/*"],
      "@store/*": ["src/store/*"],
      "@styles/*": ["src/styles/*"],
    }
  },
  "include": ["src"],
  "references": [
    { "path": "./tsconfig.app.json" },
    { "path": "./tsconfig.node.json" }
  ]
}
